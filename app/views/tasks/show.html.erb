<h2><%= @task.title %></h2>
<%= link_to "Edit this task!", edit_task_path %>
<p><%= @task.details %></p>
<% if @task.completed? %>
  <p>[X] Task is completed!</p>
<% else %>
  <p>[ ] Task is not completed yet!</p>
<% end %>
<%= link_to "Back to list!", tasks_path %>
<%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>